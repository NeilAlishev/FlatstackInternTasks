<div class="container">
    <%= devise_error_messages! %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup", role: "form" }) do |f| %>
    <h2 class="form-signup-heading">Sign up</h2>
    
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
    
    
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
    
    
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>
    
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "form-control", placeholder: "(Optional)" %>
    
    </br>
    
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control", placeholder: "(Optional)" %>
    <br />
    
    <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>
</div>